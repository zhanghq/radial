<?xml version="1.0" encoding="utf-8" ?>
<persistence xmlns="urn:radial-persistence">
  <databases>
    <database name="db">
      <setting type="file">Config\Persist\db.config</setting>
    </database>
    <database name="db0">
      <setting type="file">Config\Persist\db0.config</setting>
    </database>
    <database name="db1">
      <setting type="file">Config\Persist\db1.config</setting>
    </database>
  </databases>
  <objects>
    <class name="Question" type="Radial.UnitTest.Persist.Domain.Question, Radial.UnitTest"
           routing="Radial.UnitTest.Persist.Routing.QuestionStorageRouter, Radial.UnitTest">
      <mapping type="file">Config\Persist\Mapping\Question.hbm.config</mapping>
    </class>
  </objects>
  <storages>
    <storage alias="db0-Question0" database="db0">
      <contains>
        <object class="Question">
          <mapping>
            <replace key="$table$" value="Question_YW"/>
          </mapping>
        </object>
      </contains>
    </storage>
    <storage alias="db0-Question1" database="db0">
      <contains>
        <object class="Question">
          <mapping>
            <replace key="$table$" value="Question_SX"/>
          </mapping>
        </object>
      </contains>
    </storage>
    <storage alias="db0-Question2" database="db0">
      <contains>
        <object class="Question">
          <mapping>
            <replace key="$table$" value="Question_YY"/>
          </mapping>
        </object>
      </contains>
    </storage>
  </storages>
</persistence>